<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/Contenido"
        android:layout_gravity="center_horizontal"
        android:layout_margin="16dp"
        android:text="Datos del producto"/>

    <android.support.design.widget.TextInputLayout
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_gravity="center_horizontal">

        <EditText
            android:id="@+id/et_nombre_product_data"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Nombre"
            android:inputType="text"
            android:maxLines="1"
            android:singleLine="true"/>

    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_gravity="center_horizontal">

        <EditText
            android:id="@+id/et_quantity_product_data"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="cantidad"
            android:inputType="text"
            android:maxLines="1"
            android:singleLine="true"/>

    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_gravity="center_horizontal">

        <EditText
            android:id="@+id/et_barcode_product_data"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Precio/Unidad"
            android:inputType="text"
            android:maxLines="1"
            android:singleLine="true"/>

    </android.support.design.widget.TextInputLayout>

    <ImageView
        android:layout_margin="8dp"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_gravity="center_horizontal"
        app:srcCompat="@drawable/ic_photo_camera"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:orientation="horizontal">

        <TextView
            android:drawableLeft="@drawable/ic_chevron_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/Button"
            android:gravity="center_vertical"
            android:text="previus"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_cancel"
            android:layout_marginLeft="24dp"
            android:gravity="center_vertical"
            style="@style/Button"
            android:text=" cancel"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableRight="@drawable/ic_check_circle"
            android:layout_marginLeft="24dp"
            android:gravity="center_vertical"
            style="@style/Button"
            android:text="final"/>

    </LinearLayout>


</LinearLayout>
