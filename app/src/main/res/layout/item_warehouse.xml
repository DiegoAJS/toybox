<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_warehouse"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardBackgroundColor="@android:color/white"
    card_view:cardCornerRadius="4dp"
    card_view:cardElevation="4dp"
    card_view:cardUseCompatPadding="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="8dp"
        android:padding="8dp">

        <TextView
            android:id="@+id/tv_titulo_item_warehouse"
            style="@style/Titulo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toLeftOf="@+id/iv_right_item_warehouse"
            android:layout_toStartOf="@+id/iv_right_item_warehouse"
            android:gravity="center_horizontal"
            android:text="@string/warehouse" />

        <TextView
            android:id="@+id/tv_direccion_item_warehouse"
            style="@style/Contenido"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:layout_below="@+id/tv_titulo_item_warehouse"
            android:layout_toLeftOf="@+id/iv_right_item_warehouse"
            android:layout_toStartOf="@+id/iv_right_item_warehouse"
            android:text="direccion" />

        <ImageView
            android:id="@+id/iv_right_item_warehouse"
            android:layout_width="34dp"
            android:layout_height="34dp"
            app:srcCompat="@drawable/ic_chevron_right"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"/>

    </RelativeLayout>
</android.support.v7.widget.CardView>

